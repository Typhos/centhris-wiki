{
  "name": "centhris-wiki",
  "version": "3.0.1",
  "description": "A wiki for the world of Centhris in the Dungeons and Dragons multiverse.",
  "main": "server.js",
  "scripts": {
    "clientDev": "npm run dev --prefix client",
    "clientProd": "npm run start --prefix client",
    "serverDev": "npm run dev --prefix server",
    "serverProd": "npm run start --prefix server",
    "dev": "concurrently --kill-others-on-fail \"npm run serverDev\" \"npm run clientDev\"",
    "prod": "concurrently --kill-others-on-fail \"npm run serverProd\" \"npm run clientProd\"",
    "start": "node -r esm server.js",
    "heroku-postbuild": "npm install --prefix client && npm run build --prefix client"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "browserslist": "> 0.25%, not dead",
  "dependencies": {
    "apollo-server-express": "^2.16.1",
    "dotenv": "^8.2.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "express-graphql": "^0.11.0",
    "graphql": "^15.3.0",
    "mongoose": "^5.10.0"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.4"
  }
}
